@{
    ViewBag.Title = "carousel";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<br />

<fieldset>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 ">
                <div id="imageCarousel" class="carousel slide" data-interval="2000"
                     data-ride="carousel" data-pause="hover" data-wrap="true">

                    <ol class="carousel-indicators">
                        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#imageCarousel" data-slide-to="1"></li>
                        <li data-target="#imageCarousel" data-slide-to="2"></li>
                        <li data-target="#imageCarousel" data-slide-to="3"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <img class=".img-fluid wider " src="~/imgslider/diapo-1.jpg" width="1024" height="1024">
     
                        </div>
                        <div class="item">
                            <img class=".img-fluid wider " src="~/imgslider/diapo-2.jpg" width="1024" height="1024">
    
                        </div>
                        <div class="item">
                            <img class=".img-fluid wider " src="~/imgslider/diapo-3.jpg" width="1024" height="1024">

                        </div>
                        <div class="item">
                            <img class=".img-fluid wider " src="~/imgslider/diapo-4.jpg" width="1024" height="1024">

                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</fieldset>
<br />

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">

</script>







